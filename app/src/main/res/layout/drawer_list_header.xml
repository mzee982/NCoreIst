<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/navigation_drawer_header">

    <ImageView android:id="@+id/drawer_list_header_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"/>

    <TextView android:id="@+id/drawer_list_header_label"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_toRightOf="@id/drawer_list_header_icon"
              android:gravity="center_vertical"
              style="@style/NavigationDrawerListHeaderText"/>

<!--
