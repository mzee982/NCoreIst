<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base -->
    <color name="ncore_light_green">#ff629a00</color>
    <color name="ncore_light_green_alpha">#ee629a00</color>
    <color name="ncore_dark_green">#ff4a6c10</color>
    <color name="ncore_light_orange">#ffffd000</color>
    <color name="ncore_dark_orange">#ffffa500</color>
    <color name="ncore_dark_orange_alpha">#eeffa500</color>
    <color name="ncore_light_gray">#ffe7e7e7</color>
    <color name="ncore_dark_gray">#ffbfbfbf</color>
    <color name="ncore_foreground">#ffffffff</color>
    <color name="ncore_background">#ffd0d0d0</color>
    <color name="ncore_background_alpha">#aad0d0d0</color>

    <!-- Info Alert Toast -->
    <color name="info_alert_toast_bg_info">@color/ncore_light_green_alpha</color>
    <color name="info_alert_toast_bg_alert">@color/ncore_dark_orange_alpha</color>

    <!-- Torrent List -->
    <color name="torrent_list_item_bg_odd">@color/ncore_foreground</color>
    <color name="torrent_list_item_bg_even">@color/ncore_background_alpha</color>
    <color name="torrent_list_item_highlighted">@color/ncore_dark_orange</color>
    <color name="torrent_list_item_focused">@color/ncore_light_orange</color>
    <color name="torrent_list_item_text1">@color/ncore_light_gray</color>
    <color name="torrent_list_item_text2">@color/ncore_dark_gray</color>
    <color name="torrent_list_item_text_highlighted">@color/ncore_dark_orange</color>
    <color name="torrent_list_item_text_focused">@color/ncore_light_orange</color>

    <!-- Horizontal Meter Bar -->
    <color name="horizontal_meter_bar_background">@color/ncore_dark_gray</color>
    <color name="horizontal_meter_bar_progress">@color/ncore_light_green</color>

    <!-- Torrent Details Images  -->
    <color name="torrent_details_images_pressed">@color/ncore_dark_orange</color>
    <color name="torrent_details_images_focused">@color/ncore_light_orange</color>
    <color name="torrent_details_images_default">@android:color/transparent</color>

    <!-- Dividers -->
    <color name="divider_horizontal">@color/ncore_light_green</color>
    <color name="divider_drawer_title">@color/ncore_dark_gray</color>
    <color name="divider_drawer_item">@color/ncore_dark_gray</color>

    <!-- Navigation Drawer -->
    <color name="navigation_drawer_background">@color/ncore_background</color>
    <color name="navigation_drawer_header">@color/ncore_dark_gray</color>

    <color name="navigation_drawer_list_item_pressed">@color/ncore_dark_orange</color>
    <color name="navigation_drawer_list_item_focused">@color/ncore_light_orange</color>
    <color name="navigation_drawer_list_item_selected">@color/ncore_dark_orange</color>
    <color name="navigation_drawer_list_item_activated">@color/ncore_dark_orange</color>
    <color name="navigation_drawer_list_item_checked">@color/ncore_dark_orange</color>

</resources>
