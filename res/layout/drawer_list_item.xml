<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/navigation_drawer_list_item_selector">

    <ImageView android:id="@+id/drawer_list_item_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"/>

    <TextView android:id="@+id/drawer_list_item_label"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_toRightOf="@id/drawer_list_item_icon"
              android:gravity="center_vertical"
              style="@style/NavigationDrawerListItemText"/>

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/divider_drawer_item"
               android:layout_alignParentBottom="true"/>

</RelativeLayout>
