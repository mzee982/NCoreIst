<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/TorrentDetailsDrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- The main content view -->
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:background="@color/torrent_list_item_bg_even">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TorrentDetailsMainTitleValue"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:background="@drawable/torrent_list_item_odd_selector"
                    android:textColor="@color/torrent_list_item_text1"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/TorrentDetailsImageLayout"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:background="@drawable/torrent_list_item_odd_selector"
                    android:clickable="true"
                    android:onClick="onImagesClick"
                    android:visibility="gone">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/TorrentDetailsCover"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:maxHeight="150dp"
                        android:maxWidth="150dp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TorrentDetailsSampleImage1"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:layout_toRightOf="@id/TorrentDetailsCover"
                        android:maxHeight="75dp"
                        android:maxWidth="75dp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TorrentDetailsSampleImage2"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:layout_toRightOf="@id/TorrentDetailsCover"
                        android:layout_below="@id/TorrentDetailsSampleImage1"
                        android:maxHeight="75dp"
                        android:maxWidth="75dp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TorrentDetailsSampleImage3"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:layout_toRightOf="@id/TorrentDetailsCover"
                        android:layout_below="@id/TorrentDetailsSampleImage2"
                        android:maxHeight="75dp"
                        android:maxWidth="75dp"/>

            </RelativeLayout>

            <TableLayout android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_margin="4dp"
                         android:padding="4dp"
                         android:id="@+id/TorrentDetailsTable"
                         android:shrinkColumns="1"
                         android:background="@color/torrent_list_item_bg_odd">
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_name_text"
                            android:id="@+id/TorrentDetailsNameText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsNameValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_type_text"
                            android:id="@+id/TorrentDetailsTypeText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsTypeValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_uploaded_text"
                            android:id="@+id/TorrentDetailsUploadedText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsUploadedValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_uploader_text"
                            android:id="@+id/TorrentDetailsUploaderText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsUploaderValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_seeders_text"
                            android:id="@+id/TorrentDetailsSeedersText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsSeedersValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_leechers_text"
                            android:id="@+id/TorrentDetailsLeechersText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsLeechersValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_downloaded_text"
                            android:id="@+id/TorrentDetailsDownloadedText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsDownloadedValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_speed_text"
                            android:id="@+id/TorrentDetailsSpeedText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsSpeedValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_size_text"
                            android:id="@+id/TorrentDetailsSizeText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsSizeValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:text="@string/torrent_details_files_text"
                            android:id="@+id/TorrentDetailsFilesText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsFilesValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
            </TableLayout>

            <TableLayout android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_margin="4dp"
                         android:padding="4dp"
                         android:id="@+id/TorrentMovieDetailsTable"
                         android:shrinkColumns="1"
                         android:background="@color/torrent_list_item_bg_odd"
                         android:visibility="gone">
                <TableRow android:id="@+id/TorrentDetailsTitleRow"
                          android:visibility="gone">
                    <TextView
                            android:text="@string/torrent_details_title_text"
                            android:id="@+id/TorrentDetailsTitleText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsTitleValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow android:id="@+id/TorrentDetailsReleaseDateRow"
                          android:visibility="gone">
                    <TextView
                            android:text="@string/torrent_details_release_date_text"
                            android:id="@+id/TorrentDetailsReleaseDateText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsReleaseDateValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow android:id="@+id/TorrentDetailsDirectorRow"
                          android:visibility="gone">
                    <TextView
                            android:text="@string/torrent_details_director_text"
                            android:id="@+id/TorrentDetailsDirectorText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsDirectorValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow android:id="@+id/TorrentDetailsCastRow"
                          android:visibility="gone">
                    <TextView
                            android:text="@string/torrent_details_cast_text"
                            android:id="@+id/TorrentDetailsCastText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsCastValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow android:id="@+id/TorrentDetailsCountryRow"
                          android:visibility="gone">
                    <TextView
                            android:text="@string/torrent_details_country_text"
                            android:id="@+id/TorrentDetailsCountryText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsCountryValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow android:id="@+id/TorrentDetailsDurationRow"
                          android:visibility="gone">
                    <TextView
                            android:text="@string/torrent_details_duration_text"
                            android:id="@+id/TorrentDetailsDurationText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsDurationValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow android:id="@+id/TorrentDetailsLabelsRow"
                          android:visibility="gone">
                    <TextView
                            android:text="@string/torrent_details_labels_text"
                            android:id="@+id/TorrentDetailsLabelsText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsLabelsValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
                <TableRow android:id="@+id/TorrentDetailsImdbRow"
                          android:visibility="gone">
                    <TextView
                            android:text="@string/torrent_details_imdb_text"
                            android:id="@+id/TorrentDetailsImdbText"
                            android:paddingRight="8dp"
                            android:textColor="@color/torrent_list_item_text1"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:id="@+id/TorrentDetailsImdbValue"
                            android:textColor="@color/torrent_list_item_text1"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:id="@+id/OtherVersionsLayout"
                    android:background="@color/torrent_list_item_bg_odd"
                    android:visibility="gone">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Más verziók"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_margin="4dp"
                        android:padding="4dp"
                        android:background="@drawable/torrent_list_item_odd_selector"
                        android:textColor="@color/torrent_list_item_text1"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

<!--
                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/OtherVersionsList"/>
-->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/TorrentDetailsLeftDrawer"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              android:choiceMode="singleChoice"
              android:divider="@android:color/transparent"
              android:dividerHeight="0dp"
              android:background="#111"/>

</android.support.v4.widget.DrawerLayout>
