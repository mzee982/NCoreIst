<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Torrent List -->
    <style name="TorrentListItemText" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TorrentListItemText.Primary">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TorrentListItemText.Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Horizontal Meter Bar -->
    <style name="HorizontalMeterBar" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/horizontal_meter_bar</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
    </style>

    <!-- Torrent Details -->
    <style name="TorrentDetailsText" parent="android:TextAppearance">
    </style>

    <style name="TorrentDetailsText.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TorrentDetailsText.Header">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TorrentDetailsText.Footer">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TorrentDetailsText.Primary">
    </style>

    <style name="TorrentDetailsText.Secondary">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Info Alert Toast -->
    <style name="InfoAlertToastText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Borderless Button -->
    <style name="BorderlessButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/item_background_holo_light_ncore</item>
        <item name="android:paddingStart">4dip</item>
        <item name="android:paddingEnd">4dip</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="NavigationDrawerListHeaderText" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationDrawerListTitleText" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NavigationDrawerListItemText" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
