<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.NCore"
          android:versionCode="1"
          android:versionName="1.0">

    <!-- Supported SDK versions: GINGERBREAD -> JELLY_BEAN_MR2 ->  -->
    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="18"/>

    <!-- Required permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher"
                 android:theme="@style/NCoreTheme">

        <provider
                android:name="android.support.v4.content.FileProvider"
                android:authorities="com.example.NCore.FileProvider"
                android:grantUriPermissions="true"
                android:exported="false">
                <meta-data android:name="android.support.FILE_PROVIDER_PATHS"
                           android:resource="@xml/filepaths" />
        </provider>

        <activity android:name=".StartActivity"
                  android:label="@string/start_activity_label"
                  android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"
                  android:label="@string/login_activity_label"/>

        <activity android:name=".CategoriesActivity"
                  android:label="@string/categories_activity_label"
                  android:launchMode="singleTop"/>

        <activity android:name=".SearchResultsActivity"
                  android:label="@string/search_results_activity_label"
                  android:parentActivityName=".CategoriesActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.example.NCore.CategoriesActivity"/>
        </activity>

        <activity android:name="TorrentDetailsActivity"
                  android:label="@string/torrent_details_activity_label"
                  android:parentActivityName=".CategoriesActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.example.NCore.IndexActivity" />
        </activity>

        <activity android:name="SlideShowActivity"
                  android:label="@string/slideshow_activity_label"
                  android:parentActivityName="TorrentDetailsActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.example.NCore.TorrentDetailsActivity" />
        </activity>

    </application>

</manifest>
